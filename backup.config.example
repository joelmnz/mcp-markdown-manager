# Article Manager Backup Configuration
# Copy this file to backup.config and customize as needed

# Backup directory (relative to project root)
BACKUP_DIR=./backups

# Retention policy (days to keep backups)
RETENTION_DAYS=30

# Compression settings
COMPRESS_BACKUPS=true

# Backup filename prefix
BACKUP_PREFIX=article-manager

# Database connection settings (override environment variables if needed)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=article_manager
# DB_USER=article_user
# DB_PASSWORD=your-password-here

# Backup schedule (for cron jobs)
# Format: minute hour day month weekday
# Default: Daily at 2 AM
BACKUP_SCHEDULE="0 2 * * *"

# Email notifications (optional)
# BACKUP_EMAIL_TO=admin@example.com
# BACKUP_EMAIL_FROM=backup@example.com
# BACKUP_SMTP_HOST=smtp.example.com
# BACKUP_SMTP_PORT=587
# BACKUP_SMTP_USER=backup@example.com
# BACKUP_SMTP_PASS=smtp-password

# Backup verification
VERIFY_BACKUPS=true

# Remote backup storage (optional)
# REMOTE_BACKUP_ENABLED=false
# REMOTE_BACKUP_TYPE=s3|ftp|rsync
# REMOTE_BACKUP_HOST=backup.example.com
# REMOTE_BACKUP_PATH=/backups/article-manager
# REMOTE_BACKUP_USER=backup-user
# REMOTE_BACKUP_KEY=/path/to/ssh/key

# Logging
BACKUP_LOG_LEVEL=info
BACKUP_LOG_FILE=./logs/backup.log